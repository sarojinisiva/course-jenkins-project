pipeline {
    agent any
    environment {
        IMAGE_NAME = 'sarojinisiva/jenkins-flask-app'
       

    }
    stages {

        stage('Checkout') {
            steps {
                git url: 'https://github.com/sarojinisiva/course-jenkins-project.git', branch: 'main'
                sh "ls -ltr"
            }
        }
        stage('Setup') {
            steps {
                sh "pip install -r requirements.txt"
            }
        }
        stage('Test') {
            steps {
                sh "pytest"
                sh "whoami"
            }
        }
        
     
    }
}
